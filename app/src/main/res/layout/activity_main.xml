<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        >

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lvAnimation"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/edt_web"
            app:lottie_loop="true"
            />

        <EditText
            android:id="@+id/edt_web"
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/lvAnimation"
            android:hint="Link"
            android:padding="5dp"
            android:background="@drawable/bc_2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/sp_1"
            />

        <Spinner
            android:id="@+id/sp_1"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:elevation="5dp"
            android:background="@drawable/bc_1"
            app:layout_constraintTop_toBottomOf="@id/edt_web"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_1"
            />

        <Button
            android:id="@+id/btn_1"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/_2196f3"
            android:text="Search"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/sp_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
